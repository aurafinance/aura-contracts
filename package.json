{
    "name": "@aurafinance/aura-contracts",
    "description": "Aura Finance smart contracts",
    "version": "1.0.0",
    "scripts": {
        "clean": "shx rm -rf ./artifacts ./cache ./coverage ./types/generated ./coverage.json",
        "reset": "yarn clean && yarn compile",
        "commit": "git-cz",
        "compile": "yarn compile:cvx && yarn compile:aura",
        "compile:aura": "yarn hardhat compile --config hardhat.config.ts",
        "compile:cvx": "yarn hardhat compile --config hardhat-cvx.config.ts",
        "coverage": "yarn typechain && hardhat coverage --solcoverjs ./.solcover.js --temp artifacts --testfiles 'test/**/*.ts'",
        "lint": "yarn lint:sol && yarn lint:ts && yarn prettier:check",
        "lint:sol": "solhint --config ./.solhint.json \"contracts/**/*.sol\"",
        "lint:ts": "eslint --config ./.eslintrc.yaml --ignore-path ./.eslintignore --ext .js,.ts .",
        "task": "yarn hardhat --config tasks.config.ts",
        "task:fork": "yarn hardhat --config tasks-fork.config.ts",
        "postinstall": "husky install",
        "postpublish": "pinst --enable",
        "prepublishOnly": "pinst --disable",
        "prettier": "prettier --config ./.prettierrc.yaml --write \"**/*.{js,json,md,sol,ts}\"",
        "prettier:check": "prettier --check --config ./.prettierrc.yaml \"**/*.{js,json,md,sol,ts}\"",
        "test": "hardhat test",
        "test:fork": "yarn hardhat --config hardhat-fork.config.ts test ./test-fork/**/*.spec.ts",
        "typechain": "yarn hardhat typechain"
    },
    "dependencies": {
        "convex-platform": "file:convex-platform/contracts"
    },
    "devDependencies": {
        "@codechecks/client": "^0.1.12",
        "@commitlint/cli": "^14.1.0",
        "@commitlint/config-conventional": "^14.1.0",
        "@ethersproject/abi": "^5.5.0",
        "@ethersproject/abstract-signer": "^5.5.0",
        "@ethersproject/bignumber": "^5.5.0",
        "@ethersproject/bytes": "^5.5.0",
        "@ethersproject/hash": "^5.5.0",
        "@ethersproject/providers": "^5.5.0",
        "@nomiclabs/hardhat-ethers": "^2.0.2",
        "@nomiclabs/hardhat-waffle": "^2.0.1",
        "@openzeppelin/contracts-0.8": "npm:@openzeppelin/contracts@4.4.2",
        "@snapshot-labs/snapshot.js": "^0.3.53",
        "@typechain/ethers-v5": "^8.0.5",
        "@typechain/hardhat": "^3.0.0",
        "@types/chai": "^4.2.22",
        "@types/fs-extra": "^9.0.13",
        "@types/mocha": "^9.0.0",
        "@types/node": "^16.11.10",
        "@typescript-eslint/eslint-plugin": "^5.4.0",
        "@typescript-eslint/parser": "^5.4.0",
        "chai": "^4.3.4",
        "commitizen": "^4.2.4",
        "cross-env": "^7.0.3",
        "cz-conventional-changelog": "^3.3.0",
        "dotenv": "^10.0.0",
        "eslint": "^8.3.0",
        "eslint-config-prettier": "^8.3.0",
        "ethereum-waffle": "^3.4.0",
        "ethers": "^5.5.1",
        "fs-extra": "^10.0.0",
        "hardhat": "2.9.1",
        "hardhat-gas-reporter": "^1.0.4",
        "husky": "^7.0.4",
        "lint-staged": "^11.2.6",
        "mocha": "^9.1.3",
        "pinst": "^2.1.6",
        "prettier": "^2.5.0",
        "prettier-plugin-solidity": "^1.0.0-beta.19",
        "shelljs": "^0.8.4",
        "shx": "^0.3.3",
        "solhint": "^3.3.6",
        "solhint-plugin-prettier": "^0.0.5",
        "solidity-coverage": "^0.7.17",
        "ts-generator": "^0.1.1",
        "ts-node": "^10.4.0",
        "typechain": "^6.0.5",
        "typescript": "^4.5.2"
    },
    "files": [
        "/contracts"
    ],
    "keywords": [
        "blockchain",
        "ethereum",
        "hardhat",
        "smart-contracts",
        "solidity"
    ],
    "publishConfig": {
        "access": "public"
    }
}
